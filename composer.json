{
    "name": "clubify/checkout-sdk-php",
    "description": "SDK oficial para integração com a plataforma Clubify Checkout em PHP",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "clubify",
        "checkout",
        "payment",
        "ecommerce",
        "sdk",
        "php",
        "laravel"
    ],
    "authors": [
        {
            "name": "Clubify Team",
            "email": "sdk-support@clubify.com"
        }
    ],
    "homepage": "https://github.com/clubify/checkout-sdk-php",
    "support": {
        "issues": "https://github.com/clubify/checkout-sdk-php/issues",
        "source": "https://github.com/clubify/checkout-sdk-php",
        "docs": "https://docs.clubify.com/sdk/php"
    },
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.0",
        "firebase/php-jwt": "^6.0",
        "ramsey/uuid": "^4.0",
        "nesbot/carbon": "^2.0",
        "symfony/cache": "^6.0",
        "monolog/monolog": "^3.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "psr/cache": "^3.0",
        "psr/log": "^3.0",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "psalm/plugin-phpunit": "^0.18",
        "vimeo/psalm": "^5.0",
        "nunomaduro/phpinsights": "^2.0",
        "orchestra/testbench": "^8.0",
        "fakerphp/faker": "^1.20",
        "spatie/laravel-package-tools": "^1.0",
        "illuminate/support": "^10.0",
        "illuminate/config": "^10.0",
        "illuminate/events": "^10.0",
        "illuminate/queue": "^10.0",
        "illuminate/cache": "^10.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "suggest": {
        "illuminate/support": "Required for Laravel integration",
        "illuminate/config": "Required for Laravel configuration",
        "illuminate/events": "Required for Laravel events",
        "illuminate/queue": "Required for Laravel async jobs",
        "illuminate/cache": "Required for Laravel cache integration",
        "spatie/laravel-data": "For enhanced DTOs",
        "spatie/laravel-enum": "For better enum support",
        "spatie/laravel-webhook-client": "For webhook handling"
    },
    "autoload": {
        "psr-4": {
            "Clubify\\Checkout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Clubify\\Checkout\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Clubify\\Checkout\\Laravel\\ClubifyCheckoutServiceProvider"
            ],
            "aliases": {
                "ClubifyCheckout": "Clubify\\Checkout\\Laravel\\Facades\\ClubifyCheckout"
            }
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage --coverage-text",
        "test-unit": "phpunit tests/Unit",
        "test-integration": "phpunit tests/Integration",
        "test-feature": "phpunit tests/Feature",
        "phpstan": "phpstan analyse src tests --level=8",
        "psalm": "psalm",
        "insights": "phpinsights",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-baseline": "php-cs-fixer fix --dry-run --diff --format=json > .php-cs-fixer.baseline.json",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@psalm",
            "@test"
        ],
        "fix": [
            "@cs-fix"
        ],
        "check": [
            "@quality"
        ],
        "setup": [
            "composer install",
            "composer dump-autoload"
        ],
        "post-autoload-dump": [
            "@setup"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all tests",
        "test-coverage": "Run tests with coverage report",
        "test-unit": "Run unit tests only",
        "test-integration": "Run integration tests only",
        "test-feature": "Run feature tests only",
        "phpstan": "Run static analysis with PHPStan",
        "psalm": "Run static analysis with Psalm",
        "insights": "Run PHP Insights quality analysis",
        "cs-fix": "Fix code style issues",
        "cs-check": "Check code style without fixing",
        "quality": "Run all quality checks",
        "check": "Alias for quality checks"
    }
}